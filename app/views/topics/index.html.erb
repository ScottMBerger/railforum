<p id="notice"><%= notice %></p>

<h1>Listing Topics</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Last poster</th>
      <th>Last post at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @topic.each do |topic| %>
      <tr>
        <td><%= link_to topic.name, forum_topic_path(topic) %></td>
        <td><%= topic.last_poster_id %>dd</td>
        <td><%= topic.last_post_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if current_user %>
<%= link_to 'New Topic', new_forum_topic_path %>
<% end %>