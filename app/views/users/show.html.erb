<% provide(:title, @user.username) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.username %><br><br><br><br>
        Post Count: <%= @user.posts.count + @user.topics.count %>
      </h1>
    </section>
  </aside>
</div>